@model IEnumerable<OrderUp.Models.MENU>

@{
    ViewBag.Title = "AddItem";
}

<h2>AddItem</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.ActionLink("Select", "SelectItem", new {orderid = @ViewBag.orderid, foodname = item.FoodName, foodprice = item.Price})
        </td>
    </tr>
}

</table>
