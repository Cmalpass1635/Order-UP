@model IEnumerable<OrderUp.Models.TAX>

@{
    ViewBag.Title = "Tax";
}

<h2>Tax</h2>

<p>
    @Html.ActionLink("Create New", "CreateTax")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaxName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaxName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxAmount)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTax", new { taxid=item.TaxID }) |
            @Html.ActionLink("Delete", "DeleteTax", new { taxid=item.TaxID })
        </td>
    </tr>
}

</table>
